<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <com.open.lib.TouchView
        android:id="@+id/leftTopTextButton"
        android:layout_width="250dp"
        android:layout_height="44dp" >

        <com.open.lib.TouchTextView
            android:id="@+id/leftTopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingTop="12dp"
            android:textColor="@color/text_color_blue"
            android:textSize="16sp" />
    </com.open.lib.TouchView>

    <TextView
        android:id="@+id/rightTopTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:padding="10dp"
        android:textColor="@color/login_text_color"
        android:textSize="16sp" />

    <com.open.lib.TouchView
        android:id="@+id/grip"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:translationX="-12dp" >

        <com.open.lib.TouchImageView
            android:layout_width="36dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:background="@drawable/grip"
            android:contentDescription="grip"
            android:translationY="14dp" />
    </com.open.lib.TouchView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:max="90"
        android:translationY="44dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cardTopLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_black_2"
        android:contentDescription="white_line"
        android:translationY="44dp" />

    <TextView
        android:id="@+id/leftBottomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/login_text_color"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/rightBottomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/login_text_color"
        android:textSize="15sp"
        android:visibility="invisible" />

</merge>