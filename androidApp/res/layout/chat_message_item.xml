<?xml version="1.0" encoding="utf-8"?>
<com.open.lib.TouchView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="80dp"
    android:background="#000099cd"
    android:paddingBottom="0dp"
    android:paddingTop="0dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#eeffffff"
        android:visibility="visible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/card_color"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_color_black_2"
        android:translationY="79dp" />

    <com.open.lib.TouchImageView
        android:id="@+id/userHeadView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:translationX="7dp"
        android:translationY="0dp" />

    <com.open.lib.TouchTextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:text="李建国"
        android:textColor="@color/text_color_black"
        android:textSize="16sp"
        android:translationX="64dp"
        android:translationY="-9dp" />

    <com.open.lib.TouchTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:singleLine="true"
        android:text="16:08"
        android:textColor="@color/text_color_black"
        android:textSize="14sp"
        android:translationX="-28dp"
        android:translationY="-9dp" />

    <com.open.lib.TouchTextView
        android:id="@+id/groupIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/icon_background"
        android:singleLine="true"
        android:text="群"
        android:textColor="#fff"
        android:textSize="14sp"
        android:translationX="-7dp"
        android:translationY="-9dp" />

    <com.open.lib.TouchTextView
        android:id="@+id/tv_lastchatcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text="今天来我们这儿吃饭吧~~好久没有"
        android:textColor="@color/text_color_black"
        android:textSize="14sp"
        android:translationX="64dp"
        android:translationY="-15dp" />

    <com.open.lib.TouchView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:translationX="-7dp"
        android:translationY="42dp" >

        <com.open.lib.TouchTextView
            android:id="@+id/tv_notread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/number_hint"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </com.open.lib.TouchView>

</com.open.lib.TouchView>