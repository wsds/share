<com.open.lib.TouchView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/card_background_white_radius" >

    <com.open.lib.TouchImageView
        android:id="@+id/background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.open.lib.TouchImageView
        android:id="@+id/content_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <com.open.lib.TouchView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.open.lib.TouchTextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="大冬瓜"
            android:textColor="#aa000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="10dp"
            android:translationY="10dp" />
    </com.open.lib.TouchView>
    <com.open.lib.TouchView
        android:id="@+id/children_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:visibility="gone">

        <com.open.lib.TouchTextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="大冬瓜"
            android:textColor="#aa000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationX="10dp"
            android:translationY="10dp" />
    </com.open.lib.TouchView>
    
    
    
    
    <com.open.lib.TouchTextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="大冬瓜，大冬瓜，爱吃鱼，啦啦啦啦啦~~~"
        android:textColor="#eeffffff"
        android:textSize="14sp"
        android:translationX="20dp"
        android:translationY="60dp" />

</com.open.lib.TouchView>