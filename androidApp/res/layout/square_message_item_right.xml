<?xml version="1.0" encoding="utf-8"?>
<com.open.lib.TouchView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp" >

    <com.open.lib.TouchImageView
        android:id="@+id/messageImage"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:src="@drawable/square_temp" />

    <com.open.lib.TouchImageView
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:background="@drawable/square_message_background"
        android:visibility="gone" />

    <com.open.lib.TouchTextView
        android:id="@+id/messageContent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:lines="2"
        android:text="“停车做爱枫林晚 ， 霜叶红叶二月红”"
        android:textColor="#fff"
        android:textSize="16sp" />

    <com.open.lib.TouchTextView
        android:id="@+id/messageAuthor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:text="Lucy and Luly"
        android:textColor="#fff"
        android:textSize="18sp" />

</com.open.lib.TouchView>