<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <include layout="@layout/view_title_messages_friends_me" >
    </include>

    <RelativeLayout
        android:id="@+id/rl_userMenuOptions"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp" >

        <ImageView
            android:id="@+id/messages_friends_me_pager_indicator"
            android:layout_width="110dp"
            android:layout_height="2dp"
            android:background="@color/card_color_on_background"
            android:translationY="2dp"
            android:visibility="visible" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/rl_chatMessagesList"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/backview_background" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="消息"
                android:textAlignment="center"
                android:textColor="@color/text_color_on_background"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_intimatefriends"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backview_background" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="好友"
                android:textAlignment="center"
                android:textColor="@color/text_color_on_background"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_userInfomation"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/backview_background" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="我"
                android:textAlignment="center"
                android:textColor="@color/text_color_on_background"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <com.open.lib.TouchView
        android:id="@+id/friendsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:translationY="88dp"
        android:visibility="gone" >
    </com.open.lib.TouchView>

    <com.open.lib.TouchView
        android:id="@+id/messagesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="88dp"
        android:visibility="visible" >

        <com.open.lib.TouchView
            android:id="@+id/NoMessagesStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" >

            <com.open.lib.TouchImageView
                android:id="@+id/iv_notMessage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/not_messages"
                tools:ignore="ContentDescription" />

            <com.open.lib.TouchTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_notMessage"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="暂时没有新消息" />
        </com.open.lib.TouchView>
    </com.open.lib.TouchView>

    <com.open.lib.TouchView
        android:id="@+id/meContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:translationY="88dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/appIconToName"
            android:layout_width="125dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_star_text"
            android:visibility="gone" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99ffffff"
            android:contentDescription="white_line"
            android:translationY="87dp" />

        <com.open.lib.TouchView
            android:id="@+id/businesscard"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:translationY="88dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:background="@color/card_color_on_background"
                android:contentDescription="white_line"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_headImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/face_man" />

            <com.open.lib.TouchView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp" >

                <com.open.lib.TouchTextView
                    android:id="@+id/tv_userNickname"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginRight="30dp"
                    android:singleLine="true"
                    android:text="樱桃小丸子"
                    android:textColor="@color/text_color_on_background"
                    android:textSize="16sp" />

                <com.open.lib.TouchTextView
                    android:id="@+id/tv_userMainBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="25dp"
                    android:lines="2"
                    android:paddingRight="10dp"
                    android:text="爱哭就哭，爱笑就笑，小丸子一样的人生。"
                    android:textColor="@color/text_color_on_background" />

                <com.open.lib.TouchImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/into" />
            </com.open.lib.TouchView>
        </com.open.lib.TouchView>

        <com.open.lib.TouchImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dashed_line"
            android:translationY="178dp" />

        <com.open.lib.TouchView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center_vertical"
            android:translationY="179dp"
            android:visibility="visible" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="@color/card_color_on_background"
                android:visibility="invisible" />

            <com.open.lib.TouchTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="积分(0)"
                android:textColor="@color/text_color_on_background"
                android:textSize="18sp" />
        </com.open.lib.TouchView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99ffffff"
            android:contentDescription="white_line"
            android:translationY="236dp" />

        <com.open.lib.TouchView
            android:id="@+id/dynamicList"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:translationY="236dp"
            android:visibility="visible" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/card_color_on_background"
                android:visibility="invisible" />

            <com.open.lib.TouchTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="动态列表"
                android:textColor="@color/text_color_on_background"
                android:textSize="18sp" />
        </com.open.lib.TouchView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99ffffff"
            android:contentDescription="white_line"
            android:translationY="292dp" />

        <com.open.lib.TouchView
            android:id="@+id/morefriend"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:translationY="293dp"
            android:visibility="visible" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/card_color_on_background"
                android:visibility="invisible" />

            <com.open.lib.TouchTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="找到更多"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </com.open.lib.TouchView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99ffffff"
            android:contentDescription="white_line"
            android:translationY="349dp" />

        <com.open.lib.TouchView
            android:id="@+id/mySetting"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:translationY="350dp"
            android:visibility="visible" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/card_color_on_background"
                android:visibility="invisible" />

            <com.open.lib.TouchTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="设置"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </com.open.lib.TouchView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99ffffff"
            android:contentDescription="white_line"
            android:translationY="405dp" />
    </com.open.lib.TouchView>

</RelativeLayout>