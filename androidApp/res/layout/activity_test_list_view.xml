<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_background_1" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@color/card_color" 
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:translationX="-10dp" >

            <ImageView
                android:id="@+id/main_pager_indicator"
                android:layout_width="44dp"
                android:layout_height="42dp"
                android:background="@color/card_color"
                android:translationY="2dp"
                android:visibility="visible" >
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/messages_friends_me_menu_view"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:translationX="-10dp" >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/person_icon_selected" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_menu_view"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:translationX="-54dp" >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/group_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/square_menu_view"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:translationX="-98dp" >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/square_icon" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_control_progress_container"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:translationY="0dp" >

        <include
            android:id="@+id/title_control_progress"
            layout="@layout/view_element_debug1_control_progress" />
    </RelativeLayout>

    <com.open.lib.TouchView
        android:id="@+id/friendsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:translationY="2dp"
        android:visibility="visible" >
    </com.open.lib.TouchView>

</RelativeLayout>